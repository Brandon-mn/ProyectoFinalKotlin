<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Style for menu buttons -->
    <style name="MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item> <!-- Cambia el color del texto aquí -->
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorButtonBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!-- Estilo para botón de Modificar -->
    <style name="Button_Modify">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#FF5722</item> <!-- Cambia el color de fondo según preferencias -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Estilo para botón de Eliminar -->
    <style name="Button_Delete">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#F44336</item> <!-- Cambia el color de fondo según preferencias -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Estilo para botón de Insertar -->
    <style name="Button_Insert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#4CAF50</item> <!-- Cambia el color de fondo según preferencias -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
